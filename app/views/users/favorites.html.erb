<div class='container'>
  <div class="row justify-content-center">
    <% if @user == current_user %>
      <div class="mr-5 mb-4">
        <h3><%= link_to "follow",user_followings_path(@user), class: "text-secondary" %></h3>
      </div>
      <div>
        <h3><%= link_to 'my page', user_path(current_user.id), class: "text-secondary" %></h3>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-center">
      <% @favorite_posts.each do |post| %>
        <div class="mx-3 mb-5">
          <%= link_to post_path(post.id) do %>
            <%= attachment_image_tag post, :image, format: 'jpeg', size: "300x300" %>
          <% end %>
          <h5 class="text-success mt-2 ml-3">â™¥<%= post.favorites.count %></h5>
          <%= link_to post_path(post.id) do %>
           <h6 class="text-center text-secondary"><%= post.title %></h6>
          <% end %>
        </div>
      <% end %>
  </div>
  <div class="row justify-content-center">
    <%= paginate @posts %>
  </div>
</div>