<div>
  <h3><%= @user.name %></h3>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
  <h3><%= @user.profile_text %></h3>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<% @posts.each do |post| %>
<div>
  <%= link_to post_path(post.id) do %>
    <%= attachment_image_tag post, :image, format: 'jpeg', size: "100x100"  %>
  <p>タイトル：<%= post.title %></p>
  <% end %>
  ♥<%= post.favorites.count %>いいね
</div>
<% end %>
<p><%= link_to "投稿一覧", posts_path(@post) %></p>
<%= paginate @posts %>