<div class='container'>
  <div class="row my-4">
    <div class="col">
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
      <h5 class="mt-2 ml-3">
        <% if current_user.following?(@user) %>
         <%= link_to "Unfollow", user_relationships_path(@user.id), method: :delete %>
        <% else %>
         <%= link_to "Follow", user_relationships_path(@user.id), method: :post %>
        <% end %>
      </h5>
    </div>
    <div class="col">
      <h3><%= @user.name %></h3>
    </div>
      <h3><%= @user.profile_text %></h3>
    <% if @user.id == current_user.id %>
      <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
    <% end %>
  </div>
  <div class="row justify-content-center">
    <% @posts.each do |post| %>
    <div class="mx-3 mb-5">
      <%= link_to post_path(post.id) do %>
        <%= attachment_image_tag post, :image, format: 'jpeg', size: "300x300"  %>
      <% end %>
      <h5 class="text-success mt-2 ml-3">♥<%= post.favorites.count %></h5>
      <%= link_to post_path(post.id) do %>
       <h6 class="text-info text-center text-secondary"><%= post.title %></h6>
      <% end %>
    </div>
    <% end %>
  </div>
    <% if @user == current_user %>
      <%= link_to "フォローしたユーザー",user_followings_path(@user) %>
      <%= link_to "いいねした投稿",favorites_user_path(@user) %>
    <% end %>
    <%= link_to "投稿一覧", posts_path(@post) %>
    <%= paginate @posts %>
</div>