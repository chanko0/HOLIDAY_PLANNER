<div class='container'>
  <div class="row justify-content-center">
    <div class="mr-5 mb-3">
      <h3><%= link_to '♥', posts_path, class: "text-secondary" %></h3>
    </div>
    <div>
      <h3><%= link_to 'new', post_post_path(@posts), class: "text-secondary" %></h3>
    </div>
  </div>
  <div class="row justify-content-center">
    <% @post_favorites.each do |post| %>
    <div class="mx-3 mb-5">
      <%= link_to post_path(post.id) do %>
        <%= attachment_image_tag post, :image, format: 'jpeg', size: "300x300" %>
      <% end %>
      <h5 class="text-success mt-2 ml-3">♥<%= post.favorites.count %></h5>
      <%= link_to post_path(post.id) do %>
       <h6 class="text-info text-center text-secondary"><%= post.title %></h6>
      <% end %>
    </div>
    <% end %>
  </div>
  <div class="row justify-content-center">
    <%= paginate @posts %>
  </div>

</div>