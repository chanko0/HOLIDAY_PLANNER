<%= form_with model:@user, local:true do |f| %>
<div class='container'>
  <div class="row justify-content-center mb-5">
    <% if @user.errors.any? %>
      <%= @user.errors.count %>件のエラーが発生しました
      <% @user.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
  </div>
  <div class="row justify-content-center">
    <div class="col-2"></div>
    <div class="col-5">
      <div>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "mr-3" %>
        <label for="inputImage"></label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>
      <div class="mt-5">
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "ml-3" %>
      </div>
    </div>
    <div class="col-5">
      <%= f.text_area :profile_text, size: "25x6" %>
    </div>
  </div>
  <div class="row justify-content-center mt-5">
    <%= f.submit "save", class: "bg-primary text-white" %>
  </div>
</div>
<% end %>