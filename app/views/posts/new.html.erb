<div class='container'>
  <div class="row justify-content-center mb-5">
   <br><br>
      <% if @post.errors.any? %>
        <%= @post.errors.count %>件のエラーが発生しました
        <% @post.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
  </div>
  <div class="row">
    <div class="col text-secondary">
      <%= form_with model: @post, local:true do |f| %>
        <div>
          <h4>Picture</h4>
          <%= f.attachment_field :image %>
        </div>
        <div class="my-5">
          <h4>Title</h4>
          <%= f.text_field :title, size: "50" %>
        </div>
        <div>
          <h4>Prefecture</h4>
          <%= f.text_field :prefecture,  size: "20",  placeholder: "東京"%>
        </div>
        <div class="my-5">
          <h4>Area</h4>
          <%= f.text_field :city,  size: "20",  placeholder: "渋谷" %>
        </div>
        <%= f.submit 'post', class: "bg-primary text-white" %>
    </div>
    <div class="col text-secondary">
      <h4>Plan</h4>
      <%= f.text_area :content,  size: "50x20" %>
    </div>
      <% end %>
  </div>
  </div>
</div>